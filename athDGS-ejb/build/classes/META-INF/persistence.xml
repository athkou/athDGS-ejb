<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="athDGS-PU" transaction-type="JTA">
    <jta-data-source>jdbc/athDigitalGameStore</jta-data-source>
    <class>gr.kourtzis.dgs.entity.Activation</class>
    <class>gr.kourtzis.dgs.entity.Address</class>
    <class>gr.kourtzis.dgs.entity.Category</class>
    <class>gr.kourtzis.dgs.entity.Customer</class>
    <class>gr.kourtzis.dgs.entity.Game</class>
    <class>gr.kourtzis.dgs.entity.Inventory</class>
    <class>gr.kourtzis.dgs.entity.LibraryGame</class>
    <class>gr.kourtzis.dgs.entity.MyOrder</class>
    <class>gr.kourtzis.dgs.entity.Review</class>
    <class>gr.kourtzis.dgs.entity.User</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
